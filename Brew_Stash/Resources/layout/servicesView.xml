<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="10dip"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:text="Sugar (Free)"
        android:textAppearance="?android:attr/textAppearanceLarge"
    />
    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:prompt="@string/numbers_prompt"
    />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:text="Full Cream Milk (1$)"
        android:textAppearance="?android:attr/textAppearanceLarge"
    />
    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:prompt="@string/numbers_prompt"
    />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:text="Skim Milk (1.5$)"
        android:textAppearance="?android:attr/textAppearanceLarge"
    />
    <Spinner
        android:id="@+id/spinner3"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:prompt="@string/numbers_prompt"
    />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:text="Whip Cream (2$)"
        android:textAppearance="?android:attr/textAppearanceLarge"
    />
    <Spinner
        android:id="@+id/spinner4"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:prompt="@string/numbers_prompt"
    />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:text="Ice Cream (3$)"
        android:textAppearance="?android:attr/textAppearanceLarge"
    />
    <Spinner
        android:id="@+id/spinner5"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:prompt="@string/numbers_prompt"
    />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:text="Marshmallow (3$)"
        android:textAppearance="?android:attr/textAppearanceLarge"
    />
    <Spinner
        android:id="@+id/spinner6"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:prompt="@string/numbers_prompt"
    />
    <Button
        android:text="Proceed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/servicesButton" />
</LinearLayout>
