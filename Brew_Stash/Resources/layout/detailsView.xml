<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:text="Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/detailsTextView1" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/detailsEditText1" />
    <TextView
        android:text="Contact Number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/detailsTextView2" />
    <EditText
        android:inputType="phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/detailsEditText2" />
    <TextView
        android:text="Time of Pickup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/detailsTextView3" />
    <EditText
        android:inputType="time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/detailsEditText3" />
    <TextView
        android:text="Choose Payment Method"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/detailsTextView4" />
     <Spinner
        android:id="@+id/spinnerPayment"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:prompt="@string/numbers_prompt"
    />
    <Button
        android:text="Proceed to Payment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button2" />


</LinearLayout>
